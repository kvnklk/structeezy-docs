---
import { getImage } from "astro:assets";
import PropsyHappyIcon from "~/icons/PropsyHappyIcon";

export interface Props {
  icon?: "puzzle-piece" | "question-mark" | "check-list";
}

const { icon } = Astro.props;
---

<div class={`highlight-box content ${icon}`}>
  <PropsyHappyIcon className="icon" />
  <section>
    <slot />
  </section>
</div>

<style>
  :global(section > *) + .highlight-box {
    margin: 4rem 0;
  }

  .highlight-box {
    position: relative;
    padding-block: 2rem;
    padding-inline-start: 2rem;
    padding-inline-end: 4rem;
    border: 1px solid var(--sl-color-accent);
    background-color: var(--sl-color-accent-low);
    color: var(--sl-color-accent-high);
  }

  .highlight-box.check-list {
    --o-color-hue: var(--o-hue-green);
    border: 1px solid var(--sl-color-accent);
    background-color: var(--sl-color-accent-low);
  }

  .highlight-box > .icon {
	color: var(--sl-color-white);
    position: absolute;
    inset-block-start: -2.5rem;
    inset-inline-end: 1.5rem;
    inline-size: 8rem;
    block-size: 8rem;
	transition: all 0.3s var(--o-ease-3);
	&:hover {
		rotate: 5deg;
		scale: 1.1;
		translate: 0px 2px;
	}
  }

  :global(ol) {
    padding-left: 1.5rem;
  }
</style>
