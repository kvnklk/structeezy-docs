---
import logotype from "~/assets/logos/structeezy-logotype.svg?raw";
import docs from "~/assets/logos/docs.svg?raw";
import { pathWithBase } from "@nm/@astrojs/starlight/utils/base";
import type { Props } from "@astrojs/starlight/props";

const href = pathWithBase((Astro.props.locale || ""));
---

<span class="site-title sl-flex">
  <a href="https://structeezy.com/" class="logotype" set:html={logotype} aria-label="structeezy website" />
  <a {href} class="docs" set:html={docs} aria-label="o-props Docs" />
</span>

<style>
  .site-title {
    justify-self: flex-start;
    max-width: 100%;
    overflow: hidden;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    white-space: nowrap;
  }
  .site-title a {
    transition: transform 0.18s ease-out;
  }
  .site-title a:hover {
    transform: translateY(-0.25rem);
  }
  
  .logotype, .docs {
    height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y) - 0.25rem);
    width: auto;
    object-fit: contain;
    object-position: 0 50%;
    color: var(--sl-color-text-accent);
  }

  .logotype :global(svg),
  .docs :global(svg) {
	display: block;
    height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y) - 0.75rem);
    width: auto;
    object-fit: contain;
    object-position: 0 50%;
  }
</style>
